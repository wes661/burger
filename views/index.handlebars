<center><h1>Eat Da Burger!</h1></center>
<div class="conatiner-fluid">
  <div class="row">
    <div class="col-md-4 burgerCol">
      <center><h2>Burgers To Eat</h2></center>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <center>
              <li>
              <p class="burgerText">
                {{this.id}}. {{this.burger_name}}
                <br>
                <button  data-id="{{this.id}}" data-newdevour="{{devoured}}" class="btn btn-danger eat">Devour Burger!</button>
              </p>
              </li>
            </center>  

          {{/unless}}  
        {{/each}}
      </ul>
    </div>  
    <div class="col-md-4">
      <center>
        <h2>Add a Burger</h2>
        <br>
        <form class="create-form">
          <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="burgerName" name="name">
            <button class="btn btn-success" type="submit">Add Burger</button>
          </div>
        </form>
      </center>  
    </div>  
    <div class="col-md-4 burgerCol2">
      <center><h2>Devoured Burgers</h2></center>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <center>        
              <li>
                <p class="burgerText">
                  {{this.burger_name}}
                </p>
              </li>
            </center>    
          {{/if}}  
        {{/each}}
      </ul>
    </div>  
  </div>  
</div>    

